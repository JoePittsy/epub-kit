{
  "compilerOptions": {
    "target": "es5",                          
    "module": "commonjs",                    
    "lib": ["es6"],                     
    "allowJs": true,
    "outDir": "build",                          
    "rootDir": "src",
    "declaration": true,
    "strict": true,         
    "noImplicitAny": true,
    "esModuleInterop": true,
    "typeRoots": ["./types", "./node_modules/@types"],
    "resolveJsonModule": true    
  },
  "exclude": [
    "node_modules",
    "docs"
  ]
}