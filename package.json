{
  "name": "epub-kit",
  "version": "1.2.3",
  "description": "A suite of tools for working with epubs",
  "main": "build/book.js",
  "files": [
    "build/**/*"
  ],
  "scripts": {
    "build": "rimraf ./build && tsc",
    "start": "npm run build && node build/book.js",
    "docs": "rimraf ./docs && jsdoc src/book.ts -c jsdoc.json",
    "test": "ts-mocha tests/*.test.ts"
  },
  "keywords": [
    "epub",
    "book",
    "reader",
    "metadata",
    "ebook"
  ],
  "author": "Joe Pitts",
  "license": "ISC",
  "dependencies": {
    "@types/xmldom": "^0.1.29",
    "archiver": "^4.0.1",
    "node-stream-zip": "^1.9.1",
    "rimraf": "^3.0.2",
    "xmldoc": "^1.1.2",
    "xmldom": "^0.3.0"
  },
  "devDependencies": {
    "@types/chai": "^4.2.11",
    "@types/mocha": "^7.0.2",
    "@types/node": "^13.13.4",
    "@types/archiver": "^3.1.0",
    "better-docs": "^2.0.0",
    "chai": "^4.2.0",
    "jsdoc": "^3.6.4",
    "mocha": "^7.1.2",
    "ts-mocha": "^7.0.0",
    "ts-node": "^8.10.1",
    "typescript": "^3.8.3"
  }
}
